<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary btn-lg"
          >Add New Campground</a
        >
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds</h3>
    </div>
  </div>
  <div class="row text-center">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-lg-3 col-md-4 col-sm-6">
      <div class="card">
        <img
          class="card-img-top"
          src="<%= campground.image %>"
          alt="<%= campground.name %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= campground.name %></h5>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
            >More Info</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include("../partials/footer") %>
